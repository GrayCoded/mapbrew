<!DOCTYPE html>
<html>
  <head>
    <title>Login | Mapbrew</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../css/reset.css" />
    <link rel="stylesheet" href="../css/modal.css" />
    <link rel="stylesheet" href="../css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Kalam&display=swap"
      rel="stylesheet"
    />
    <audio id="buttonClickSound">
      <source src="path-to-your-audio-file.mp3" type="audio/mpeg" />
      Your browser does not support the audio element.
    </audio>
  </head>

  <body>
    <div id="everything">
      <div class="row m-0">
        <nav class="navbar">
          <div class="col">
            <!-- column to make mapbrew centered -->
          </div>
          <div class="col d-flex justify-content-center">
            <a href="index">
              <p id="navTitle">Mapbrew</p>
            </a>
          </div>
          <div class="right col d-flex justify-content-end">
            <button class="navButton"><a href="login">Login</a></button>
            <button class="navButton">
              <a href="mapbuilder">Map Builder</a>
            </button>
            <button class="navButton"><a href="league">League</a></button>
            <button class="navButton"><a href="faq">FAQ</a></button>
          </div>
        </nav>
      </div>
      <div class="container">
        <div id="loginform">
          <form action="" class="form">
            <input
              type="text"
              name="username"
              class="box"
              placeholder="username"
            />

            <div class="passContainer">
              <input
                type="password"
                name="password"
                class="box"
                placeholder="password"
                id="password"
              />
              <img src="../assets/images/lock.png" id="lockicon" />
            </div>

            <div class="subContainer">
              <input type="submit" value="Login" id="submit" />
            </div>
          </form>
        </div>
        <div class="links">
          <div id="signup">
            <button id="openModalBtn">sign up</button>
          </div>
          <div id="forgotpassword">
            <button>forgot password?</button>
          </div>
        </div>
      </div>

      <!-- Sign Up Modal -->
      <div id="signupModal" class="modal">
        <div class="modal-content">
          <span class="close" id="closeModalBtn">&times;</span>
          <div>
            <form method="POST" action="/api/user/register">
              <!-- <form> -->
              <input
                type="text"
                name="user_name"
                class="box"
                id="username-login"
                placeholder="username"
              />
              <input
                type="email"
                name="email"
                class="box"
                id="password-login"
                placeholder="email"
              />
              <div class="passContainer">
                <input
                  type="password"
                  name="password"
                  class="box"
                  placeholder="password"
                  id="newPassword"
                />
                <img src="../assets/images/lock.png" id="newlockicon" />
              </div>
              <div class="passContainer">
                <input
                  type="password"
                  name="confirmPassword"
                  class="box"
                  placeholder=" confirm password"
                  id="confirmPassword"
                />
                <img src="../assets/images/lock.png" id="lockicon2" />
              </div>
              <div class="subContainer">
                <input type="submit" value="Sign Up" id="userSubmit" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script src="../js/login.js"></script>
  </body>
</html>
